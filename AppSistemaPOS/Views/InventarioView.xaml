<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppSistemaPOS.ViewModels"
             x:Class="AppSistemaPOS.Views.InventarioView"
             Title="Inventario">


    <Grid RowDefinitions="Auto, Auto, *">
        <SearchBar Grid.Row="0" Placeholder="Buscar en inventario..."/>

        <HorizontalStackLayout Grid.Row="1" Margin="10,0" Spacing="10" VerticalOptions="Center">
            <Label Text="Filtrar por categoría:" VerticalOptions="Center"/>
            <Picker ItemsSource="{Binding Categorias}" 
                    SelectedItem="{Binding FiltroCategoria}"
                    WidthRequest="200"/>
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2" ItemsSource="{Binding Productos}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10">
                        <Grid ColumnDefinitions="Auto, *, Auto, Auto">
                            <!-- Icono simulado -->
                            <BoxView Grid.Column="0" Color="LightGray" WidthRequest="50" HeightRequest="50" CornerRadius="5"/>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0,0,0" VerticalOptions="Center">
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding CodigoBarras}" FontSize="12" TextColor="Gray"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0">
                                <Label Text="{Binding PrecioVenta, StringFormat='${0:F2}'}" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                                <Label Text="{Binding StockActual, StringFormat='Stock: {0}'}" FontSize="12"/>
                            </VerticalStackLayout>
                            
                            <!-- Botón Editar -->
                            <Button Grid.Column="3" 
                                    Text="Editar" 
                                    FontSize="10" 
                                    HeightRequest="35" 
                                    VerticalOptions="Center"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:InventarioViewModel}}, Path=EditarProductoCommand}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Botón Flotante (FAB) simulado -->
        <Button Grid.Row="2"
                Text="+" 
                FontSize="30"
                WidthRequest="60" 
                HeightRequest="60" 
                CornerRadius="30" 
                HorizontalOptions="End" 
                VerticalOptions="End" 
                Margin="20"
                Shadow="{Shadow Radius=5}"/>
    </Grid>
</ContentPage>